@model List<Category>


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">List Category</h2>
            </div>

        </div>

    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-danger">
                    <i class="bi bi-plus-circle"> </i>Create New Category
                </a>
            </div>

        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>Category Name</th>
                    <th>Display order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>
                            @obj.DisplayOrder
                        </td>
                        <td>
                            <div class="row">
                                <div class="col-4">
                                </div>
                                <div class="col-8">
                                    <div class="w-75 btn-group" role="group">

                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="mx-2  btn btn-dark">
                                            <i class="bi bi-pencil-square"></i>Edit
                                        </a>
                                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="mx-2  btn btn-success">
                                            <i class="bi bi-trash-fill"></i>Delete
                                        </a>

                                    </div>
                                </div>

                            </div>
                        </td>

                    </tr>
                }
            </tbody>



        </table>
    </div>

</div>




