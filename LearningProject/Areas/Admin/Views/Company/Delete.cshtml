@model Company


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>

        </div>

    </div>
    <div class="card-body p-4 row">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />

            <div class="row">
                <div class="col-10">
                    <div class="border p-3">

                        <div class="form-floating py-2 col-12">
                            <input asp-for="CompanyName" type="text" disabled class="form-control border-0 shadow" />
                            <label asp-for="CompanyName"  class="ms-2"></label>

                            <span asp-validation-for="CompanyName" class="text-warning"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="StreetAddress" type="text" disabled class="form-control border-0 shadow" />
                            <label asp-for="StreetAddress" class="ms-2"></label>

                            <span asp-validation-for="StreetAddress" class="text-warning"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="City" type="text" disabled class="form-control border-0 shadow" />
                            <label asp-for="City" class="ms-2"></label>

                            <span asp-validation-for="City" class="text-warning"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="State" type="text" disabled class="form-control border-0 shadow" />
                            <label asp-for="State" class="ms-2"></label>

                            <span asp-validation-for="State" class="text-warning"></span>


                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PostalCode" type="text" disabled class="form-control border-0 shadow" />
                            <label asp-for="PostalCode" class="ms-2"></label>

                            <span asp-validation-for="PostalCode" class="text-warning"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PhoneNumber" type="text" disabled class="form-control border-0 shadow" />
                            <label asp-for="PhoneNumber" class="ms-2"></label>

                            <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                        </div>














                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }

                            </div>

                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">Back to View Product</a>
                            </div>

                        </div>


                    </div>

                </div>

            </div>


        </form>
    </div>
</div>




