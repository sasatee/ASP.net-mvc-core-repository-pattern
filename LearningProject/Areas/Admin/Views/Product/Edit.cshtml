@model Product


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>

        </div>

    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-3">

                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>

                    <span asp-validation-for="Title" class="text-warning"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" type="text" class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>

                    <span asp-validation-for="ISBN" class="text-warning"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>

                    <span asp-validation-for="Author" class="text-warning"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" type="text" class="form-control border-0 shadow" ></textarea>
                    <label asp-for="Description" class="ms-2"></label>

                    <span asp-validation-for="Description" class="text-warning"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>

                    <span asp-validation-for="ListPrice" class="text-warning"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>

                    <span asp-validation-for="Price" class="text-warning"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2"></label>

                    <span asp-validation-for="Price50" class="text-warning"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2"></label>

                    <span asp-validation-for="Price100" class="text-warning"></span>
                </div>







                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-light text-black" style="width:150px">Back to View Product</a>
                   
                    </div>

                </div>


            </div>

        </form>
    </div>
    </div>



@*  adding client side validation prevent server to be loaded / hit ever time if there is client side valiidation error *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}